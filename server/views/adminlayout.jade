doctype html
html(ng-app="admin" ng-controller="defaultCtrl")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
		link(rel='stylesheet', href='/stylesheets/admin.css')
		script(src="//localhost:35729/livereload.js" type="text/javascript")
		script(src="/javascripts/jquery.min.js" type="text/javascript")
	body
		header
			.container
				.row
					#logo.col-lg-9
					#top-menu.col-lg-3
						span.pull-right.pr-5 
							a(href) #{user.displayName}
							ul
								li
									a(href) Profile
								li 
									a(href="/logout") Log out

		.row(style="margin: 0")
			left-panel.col-lg-3.col-sm-3
				
				ul.left-menu
					li
						label Main
					li(dropdown)
						a() 
							i.fa.fa-book
							| Articles
						ul
							li
								a() Add new
							li
								a() list
					li(dropdown)
						a() 
							i.fa.fa-user
							| Users
						ul
							li
								a Add user
							li 
								a Users list

			content.col-lg-9.col-sm-9
				block content



		script(src="/javascripts/bootstrap.min.js" type="text/javascript")
		script(src="/javascripts/angular.min.js" type="text/javascript")
		script(src="/javascripts/app.admin.min.js" type="text/javascript")