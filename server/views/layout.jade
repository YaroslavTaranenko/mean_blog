doctype html
html(ng-app="blog" ng-controller="defaultCtrl as df")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		//link(rel='stylesheet', href='/stylesheets/bootstrap-grid.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
		script(src="//localhost:35729/livereload.js" type="text/javascript")
		script(src="/javascripts/jquery.min.js" type="text/javascript")
	body
		#top-menu.row
			.menu.col-lg-9
				ul
					li
						a(href="/") HOME
					li
						a(href="/about") about us
					li
						a(href="/contacts") contact us
					li
						a(href="/services") Services
					li
						a(href="/location") location
			.user.col-lg-3.text-right

				if user
					ul
						li
							a(href='/profile') #{user.displayName}
							ul
								li
									a(href='/admin') Admin

								li
									a(href='/api/logout') Exit
				else
					ul
						li
							a(href ng-click="df.toggleLoginForm()") Log in
		.modal-fon(ng-class="{'show': df.showLoginForm}")
			#login-form
				.card
					.card-header 
						h3 Login form
					.card-body
						form.form(action="/api/login" method="POST")
							.form-group
								label(for="emailid") Email:
								input.form-control(type="email" id="emailid" name="email")
							.form-group
								label(for="pass") Password:
								input.form-control(type="password" id="pass" name="password")
							button.btn.btn-primary(type="submit") Login
							a.btn.btn-primary.ml-5.pull-right(ng-click="df.showLoginForm = false") Cancel

		.container
			header
				.row
					#logo.col-lg-4
					#slogan.col-lg-8
			#main-menu.row
				ul
					li
						a(href="/") home
					li
						a(href="/blog") blog
					li
						a(href="/articles") articles
					li
						a(href) references

			block content

			footer.row.pl-5.pr-5
					.col-lg-5
						a(href="mailto:taranenkojaroslav@gmail.com")
							i.fa.fa-copyright &nbsp;Yaroslav Taranenko

					.col-lg-7.text-right 2017

		script(src="/javascripts/bootstrap.min.js" type="text/javascript")
		script(src="/javascripts/angular.min.js" type="text/javascript")
		script(src="/javascripts/app.min.js" type="text/javascript")
		//script(src="/javascripts/bootstrap.bundle.min.js" type="text/javascript")
