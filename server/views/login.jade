extends layout

block content
	.container
		.row
			.col-lg-2
			.card.col-lg-8
				.card-header
					h3.lead Login
				.card-body
					div #{errMessage}
					form.form(action="/api/login" method="POST")
						.form-group
							label(for="emailid") Email:
							input.form-control(type="email" id="emailid" name="email")
						.form-group
							label(for="pass") Password:
							input.form-control(type="password" id="pass" name="password")
						button.btn.btn-primary(type="submit") Login